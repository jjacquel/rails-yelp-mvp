<div class="container py-5">
  <h1>Restaurants</h1>
  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary my-4" %>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 my-4">
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text">
              <%= restaurant.category.capitalize %>
              <br>
              <%= restaurant.address %> | <%= restaurant.phone_number %>
              <br>
              <p><strong>Ratings: </strong>
                  <% (restaurant.average_rating).times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                  <% (5 - restaurant.average_rating).times do %>
                    <i class="far fa-star"></i>
                  <% end %>
              </p>
            </p>
            <%= link_to "See #{restaurant.name}", restaurant, class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
