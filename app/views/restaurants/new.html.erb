<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-5">
      <div class="card p-4">
        <h1>Add a new Restaurant</h1>
          <%= simple_form_for @restaurant do |f| %>
            <%= f.input :name %>
            <%= f.input :category, collection: Restaurant::CATEGORY %>
            <%= f.input :address %>
            <%= f.input :phone_number %>
            <%= f.submit "Add Restaurant", class:"btn btn-primary" %>
          <% end %>
      </div>
      <hr>
      <%= link_to "Back", restaurants_path, class: "btn btn-warning" %>
    </div>
  </div>
</div>


